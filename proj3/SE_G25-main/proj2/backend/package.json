{
  "name": "food-del-backend",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "server": "nodemon server.js",
    "lint": "eslint . --ext .js",
    "_comment": "Run everything except the converted modern files",
    "test:legacy": "node --experimental-vm-modules node_modules/jest/bin/jest.js --testPathIgnorePatterns=bulkFeature.test.js --testPathIgnorePatterns=orderController.test.js",
    "_comment2": "Run only the modern files with isolated config",
    "test:modern": "node --experimental-vm-modules node_modules/jest/bin/jest.js --config jest.bulk.config.mjs",
    
    "_comment3": "Run preferences tests",
    "test:preferences": "cross-env NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js __tests__/controllers/userPreferences.test.js",
    
    "_comment4": "The master command that CI/GitHub runs",
    "test": "npm run test:legacy && npm run test:modern && npm run test:preferences",
    
    "test:coverage": "npm run test:legacy -- --coverage && npm run test:modern -- --coverage && npm run test:preferences -- --coverage"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.1.1",
    "multer": "^1.4.5-lts.1",
    "socket.io": "^4.8.1",
    "stripe": "^14.17.0",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "cross-env": "^10.1.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.11",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "moduleFileExtensions": [
      "js",
      "json",
      "mjs"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.mjs"
    ],
    "collectCoverageFrom": [
      "controllers/**/*.js",
      "models/**/*.js",
      "middleware/**/*.js",
      "routes/**/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/__tests__/"
    ],
    "testTimeout": 30000
  }
}
